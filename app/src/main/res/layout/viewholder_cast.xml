<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/margin_medium_2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCast"
        android:layout_width="@dimen/width_height_cast_image"
        android:layout_height="@dimen/width_height_cast_image"
        android:layout_marginTop="@dimen/margin_medium"
        android:scaleType="centerCrop"
        tools:src="@drawable/profile_img"
        app:shapeAppearanceOverlay="@style/circle_profile_image" />
</FrameLayout>